<%- include('../includes/head.ejs') %> <%- include('../includes/header.ejs') %>

<script src="/js/login.js" defer></script>

<div class="float-right">
  <div
    class="card border-primary m-5 col-xs-auto col-sm-auto col-md-auto"
    style="max-width: 20rem"
  >
    <div class="card-header">
      <h5>Login</h5>
    </div>
    <div class="card-body">
      <form class="login-form" id="loginForm">
        <br class="form-group" />
        <label for="Email" class="form-label" >Email address</label>
        <input
          type="email"
          class="form-control"
          id="Email"
          name="email"
          placeholder="Enter email"
        />
        <label for="Password" class="form-label mt-4"
          >Password <span class="reset"> <a href="/reset">Reset?</a></span>
        </label>
        <input
          type="password"
          class="form-control"
          id="Password"
          placeholder="Password"
          name="password"
        />
        <button type="submit" class="btn btn-outline-primary mt-4">
          Login
        </button>
      </form>
    </div>
    <div class="centered m-2">
      <span>New on Time APP? </span> <a href="/signup">Sign up.</a>
    </div>
  </div>
</div>
<div class="mt-5">
  <div
    class="card border-primary m-5 center"
    style="min-width: 25rem; max-width: 40rem"
  ></div>
</div>


