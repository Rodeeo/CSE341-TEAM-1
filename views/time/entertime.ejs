<%- include('../includes/head.ejs') %>
  <%- include('../includes/header.ejs') %>
    <main>
      <div class="container">
        <div class="container-form">
          <h1> Enter Time </h1>
          <form action="" method="post">
              <div class="mb-3">
                  <label for="activityDescription" class="form-label">Activity Description</label>
                  <textarea name="activityDescription" class="form-control"></textarea>
              </div>
              <div class="mb-3">
                  <label for="startDate" class="form-label">Start Date</label>
                  <input type="date" name="startDate" class="form-control" id="startDate">
              </div>
              <div class="mb-3">
                  <label for="workedFrom">Worked From</label>
                  <input type="time" class="form-control" name="workedFrom" id="workedFrom">
              </div>
              <div class="mb-3">
                  <label for="workedTo">Worked To</label>
                  <input type="time" class="form-control" name="workedTo" id="workedTo">
              </div>
              <div class="mb-3">
                  <label for="duration">Duration HH:mm (Up to 24h)</label>
                  <input type="time" class="form-control" name="duration" id="duration" disabled>
              </div>
              <button type="button" class="btn btn-primary">Add Entry</button>
          </form>
        </div>
        
      </div>
    </main>

    <%- include('../includes/footer.ejs') %>